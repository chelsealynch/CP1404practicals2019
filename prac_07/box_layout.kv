BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        Button:
            size_hint_x: None
            width: 200
            text: 'Clear'
            on_press: app.clear_text()
        TextInput:
            id: input_name
            size_hint: 1, 1
            text: ''
    BoxLayout:
        orientation: 'horizontal'
        Button:
            size_hint_x: None
            width: 200
            text: 'Greet'
            on_press: app.handle_greet()
            id: output_label
        Button:
            size_hint: 1, 1
            text: 'Enter your name'
            color: (1, 1, 0, 1)