BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        Button:
            size_hint_x: None
            width: 200
            text: 'Clear'
            on_press: app.clear_text()
        TextInput:
            id: input_score
            size_hint: 1, 1
            text: ''
    BoxLayout:
        orientation: 'horizontal'
        Button:
            size_hint_x: None
            width: 200
            text: 'Calculate'
            on_press: app.calculate_score()
            id: output_label
        Label:
            id: score_label
            size_hint: 1, 1
            text: 'Enter your score'
            color: (1, 1, 0, 1)